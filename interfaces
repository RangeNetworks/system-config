# This file describes the network interfaces available on your system
# and how to activate them. For more information, see interfaces(5).

# The loopback network interface
auto lo
iface lo inet loopback

# The primary network interface
auto eth0
iface eth0 inet static
        pre-up iptables-restore < /etc/OpenBTS/iptables.rules
        address 192.168.0.22
        netmask 255.255.252.0
        network 192.168.0.0
        broadcast 192.168.0.255
        gateway 192.168.0.1
        # dns-* options are implemented by the resolvconf package, if installed
	# Please change this if you have DNS servers on your network, or
	# /etc/bind/named.conf.options if you want DNS caching functionality.
        dns-nameservers 192.168.0.22

# Please DO NOT EDIT THIS.
# You may lose access to your device if you edit this.
auto eth0:1
iface eth0:1 inet static
    name Console
    address 192.168.0.21
    netmask 255.255.255.0
    network 192.168.0.0
    broadcast 192.168.0.255


